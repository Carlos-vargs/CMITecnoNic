@model CMISentinelPrime.ViewModels.CMIWithPerspectivesViewModel

@{
    ViewBag.Title = "CMI - " + Model.CMI.Name;
}

<main class="main-content w-full px-5 pb-8">
    <div class="col-span-12 mt-5">
        <div class="card p-3 items-center flex-wrap gap-2 flex-row justify-between">
            <p class="text-base font-semibold uppercase">
                @Model.CMI.Name - Perspectivas
            </p>
            <div class="flex justify-center items-center gap-2">
                <button class="p-2 rounded-md flex items-center bg-primary font-semibold text-white shadow-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="mr-2" width="1.35em" height="1em"
                         viewBox="0 0 1728 1280">
                        <path fill="currentColor"
                              d="M1728 544v192q0 14-9 23t-23 9H448v224q0 21-19 29t-35-5L10 666Q0 656 0 643q0-14 10-24l384-354q16-14 35-6q19 9 19 29v224h1248q14 0 23 9t9 23" />
                    </svg>
                    Regresar
                </button>
                <button data-tooltip="Crear Perspectiva" data-placement="top" data-toggle="modal"
                        data-target="#cmiModal"
                        class="p-2 rounded-md gap-2 flex items-center bg-success font-semibold text-white shadow-md">
                    Crear Perspectiva

                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                        <g fill="currentColor">
                            <path d="m12 2l.117.007a1 1 0 0 1 .876.876L13 3v4l.005.15a2 2 0 0 0 1.838 1.844L15 9h4l.117.007a1 1 0 0 1 .876.876L20 10v9a3 3 0 0 1-2.824 2.995L17 22H7a3 3 0 0 1-2.995-2.824L4 19V5a3 3 0 0 1 2.824-2.995L7 2z" />
                            <path d="M19 7h-4l-.001-4.001z" />
                        </g>
                    </svg>
                </button>
            </div>
        </div>

    </div>

    <div class="tab-content is-active mt-5">
        <div class="card mt-3">
            <div class="is-scrollbar-hidden min-w-full overflow-x-auto">
                <table class="w-full text-left" id="table-collapse">
                    <thead>
                        <tr>
                            <th class="whitespace-nowrap rounded-tl-lg bg-slate-200 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100">
                            </th>
                            <th class="whitespace-nowrap bg-slate-200 pr-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:pr-5">
                                Perspectiva
                            </th>
                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                Peso
                            </th>
                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                Valor
                            </th>
                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                Dinamica
                            </th>
                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                Objetivo
                            </th>

                            <th class="whitespace-nowrap rounded-tr-lg bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">

                                Acciones
                            </th>
                        </tr>
                    </thead>
                    @foreach (var perspective in Model.Perspectives)
                    {
                        <tbody class="ac [&.is-active_.ac-icon]:rotate-180">
                            <tr class="border-y border-transparent">
                                <td class="whitespace-nowrap pl-4 py-3 sm:pl-5">
                                    <button class="ac-trigger btn h-8 w-8 rounded-full p-0 hover:bg-slate-300/20 focus:bg-slate-300/20 active:bg-slate-300/25 dark:hover:bg-navy-300/20 dark:focus:bg-navy-300/20 dark:active:bg-navy-300/25">
                                        <svg class="ac-icon transition-transform" xmlns="http://www.w3.org/2000/svg"
                                             width="1.5em" height="1.5em" viewBox="0 0 24 24">
                                            <path fill="none" stroke="currentColor" stroke-linecap="round"
                                                  stroke-linejoin="round" stroke-width="2" d="m7 10l5 5m0 0l5-5" />
                                        </svg>
                                    </button>
                                </td>
                                <td class="whitespace-nowrap pr-4 py-3 font-medium text-slate-700 dark:text-navy-100 sm:pr-5">
                                    @perspective.Name
                                </td>
                                <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                    25%
                                </td>
                                <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                    <div class="flex items-center gap-2">
                                        <div class="ax-transparent-gridline border border-slate-150 dark:border-navy-500">
                                            <div id="watchlist-2-chart"></div>
                                        </div>
                                        20%
                                    </div>
                                </td>
                                <td class="whitespace-nowrap px-4 py-3 font-medium text-success sm:px-5">
                                    <div class="flex items-center">
                                        +13.4%
                                        <svg xmlns="http://www.w3.org/2000/svg" class="text-success w-5 h-5 rotate-45"
                                             fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                                        </svg>
                                    </div>
                                </td>
                                <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                    100%
                                </td>
                                <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                    <div id="dropdown-wrapper-@perspective.Id" class="inline-flex">
                                        <button class="popper-ref btn space-x-2 bg-slate-150 font-medium text-slate-800 hover:bg-slate-200 focus:bg-slate-200 active:bg-slate-200/80 dark:bg-navy-500 dark:text-navy-50 dark:hover:bg-navy-450 dark:focus:bg-navy-450 dark:active:bg-navy-450/90 [&.is-active_svg]:rotate-180">
                                            <span>Acciones</span>
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                 class="h-4 w-4 transition-transform duration-200" fill="none"
                                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                                            </svg>
                                        </button>
                                        <div class="popper-root">
                                            <div class="popper-box rounded-md border border-slate-150 bg-white py-1.5 font-inter dark:border-navy-500 dark:bg-navy-700">
                                                <ul>
                                                    <li>
                                                        <a href="#"
                                                           class="flex h-8 items-center space-x-3 px-3 pr-8 font-medium tracking-wide outline-none transition-all hover:bg-slate-100 hover:text-slate-800 focus:bg-slate-100 focus:text-slate-800 dark:hover:bg-navy-600 dark:hover:text-navy-100 dark:focus:bg-navy-600 dark:focus:text-navy-100">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4.5 w-4.5"
                                                                 fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                                                 stroke-width="1.5">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                      d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                                            </svg>
                                                            <span> Editar</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        @using (Html.BeginForm("Delete", "CMI",
                                                      FormMethod.Post, new { id = "deleteForm-" + perspective.Id }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            @Html.Hidden("id", perspective.Id)

                                                            <a href="javascript:void(0);"
                                                               onclick="document.getElementById('deleteForm-@perspective.Id').submit();"
                                                               class="flex h-8 items-center space-x-3 px-3 pr-8 font-medium tracking-wide text-error outline-none transition-all hover:bg-error/20 focus:bg-error/20">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4.5 w-4.5"
                                                                     fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                                                     stroke-width="1.5">
                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                                </svg>
                                                                <span>Eliminar</span>
                                                            </a>
                                                        }
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr class="border-transparent border-b-slate-200 dark:border-b-navy-500">
                                <td colspan="100" class="p-0">
                                    <div class="ac-panel">
                                        <div class="px-4 is-active-objetive pb-4 sm:px-5">
                                            <div class="is-scrollbar-hidden min-w-full overflow-x-auto">
                                                <table class="w-full text-left" id="table-collapse-objetive">
                                                    <thead>
                                                        <tr>
                                                            <th class="whitespace-nowrap rounded-tl-lg bg-slate-200 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100">
                                                            </th>
                                                            <th class="whitespace-nowrap bg-slate-200 pr-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:pr-5">
                                                                Objetivos
                                                            </th>
                                                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                                                Peso
                                                            </th>
                                                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                                                Valor
                                                            </th>
                                                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                                                Dinamica
                                                            </th>
                                                            <th class="whitespace-nowrap bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">
                                                                Objetivo
                                                            </th>

                                                            <th class="whitespace-nowrap rounded-tr-lg bg-slate-200 px-4 py-3 font-semibold uppercase text-slate-800 dark:bg-navy-800 dark:text-navy-100 lg:px-5">

                                                                Acciones
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    @if (Model.ObjectivesByPerspective.TryGetValue(perspective.Id, out var objectives))
                                                    {
                                                        foreach (var objective in objectives)
                                                        {

                                                            <tbody class="ac-objetive [&.is-active-objetive_.ac-objetive-icon]:rotate-180">
                                                                <tr class="border-y border-transparent">
                                                                    <td class="whitespace-nowrap pl-4 py-3 sm:pl-5">
                                                                        <button class="ac-trigger-objetive btn h-8 w-8 rounded-full p-0 hover:bg-slate-300/20 focus:bg-slate-300/20 active:bg-slate-300/25 dark:hover:bg-navy-300/20 dark:focus:bg-navy-300/20 dark:active:bg-navy-300/25">
                                                                            <svg class="ac-objetive-icon transition-transform" xmlns="http://www.w3.org/2000/svg"
                                                                                 width="1.5em" height="1.5em" viewBox="0 0 24 24">
                                                                                <path fill="none" stroke="currentColor" stroke-linecap="round"
                                                                                      stroke-linejoin="round" stroke-width="2" d="m7 10l5 5m0 0l5-5" />
                                                                            </svg>
                                                                        </button>
                                                                    </td>
                                                                    <td class="whitespace-nowrap pr-4 py-3 font-medium text-slate-700 dark:text-navy-100 sm:pr-5">
                                                                        @objective.Id
                                                                    </td>
                                                                    <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                        @objective.Description
                                                                    </td>
                                                                    <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                        <div class="flex items-center gap-2">
                                                                            <div class="ax-transparent-gridline border border-slate-150 dark:border-navy-500">
                                                                                <div id="watchlist-2-chart"></div>
                                                                            </div>
                                                                            20%
                                                                        </div>
                                                                    </td>
                                                                    <td class="whitespace-nowrap px-4 py-3 font-medium text-success sm:px-5">
                                                                        <div class="flex items-center">
                                                                            +13.4%
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="text-success w-5 h-5 rotate-45"
                                                                                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                                                      d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                                                                            </svg>
                                                                        </div>
                                                                    </td>
                                                                    <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                        100%
                                                                    </td>
                                                                    <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                        <div id="dropdown-wrapper-objetive-@objective.Id" class="inline-flex">
                                                                            <button class="popper-ref btn space-x-2 bg-slate-150 font-medium text-slate-800 hover:bg-slate-200 focus:bg-slate-200 active:bg-slate-200/80 dark:bg-navy-500 dark:text-navy-50 dark:hover:bg-navy-450 dark:focus:bg-navy-450 dark:active:bg-navy-450/90 [&.is-active_svg]:rotate-180">
                                                                                <span>Acciones</span>
                                                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                                                     class="h-4 w-4 transition-transform duration-200" fill="none"
                                                                                     viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                                                                                </svg>
                                                                            </button>
                                                                            <div class="popper-root">
                                                                                <div class="popper-box rounded-md border border-slate-150 bg-white py-1.5 font-inter dark:border-navy-500 dark:bg-navy-700">
                                                                                    <ul>
                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="flex h-8 items-center space-x-3 px-3 pr-8 font-medium tracking-wide outline-none transition-all hover:bg-slate-100 hover:text-slate-800 focus:bg-slate-100 focus:text-slate-800 dark:hover:bg-navy-600 dark:hover:text-navy-100 dark:focus:bg-navy-600 dark:focus:text-navy-100">
                                                                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4.5 w-4.5"
                                                                                                     fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                                                                                     stroke-width="1.5">
                                                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                                                          d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                                                                                </svg>
                                                                                                <span> Editar</span>
                                                                                            </a>
                                                                                        </li>
                                                                                        <li>
                                                                                            @using (Html.BeginForm("Delete", "CMI",
                                                                                          FormMethod.Post, new { id = "deleteForm-" + perspective.Id }))
                                                                                            {
                                                                                                @Html.AntiForgeryToken()
                                                                                                @Html.Hidden("id", perspective.Id)

                                                                                                <a href="javascript:void(0);"
                                                                                                   onclick="document.getElementById('deleteForm-@perspective.Id').submit();"
                                                                                                   class="flex h-8 items-center space-x-3 px-3 pr-8 font-medium tracking-wide text-error outline-none transition-all hover:bg-error/20 focus:bg-error/20">
                                                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4.5 w-4.5"
                                                                                                         fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                                                                                         stroke-width="1.5">
                                                                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                                                                              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                                                                    </svg>
                                                                                                    <span>Eliminar</span>
                                                                                                </a>
                                                                                            }
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                <tr class="border-transparent border-b-slate-200 dark:border-b-navy-500">
                                                                    <td colspan="100" class="p-0">
                                                                        <div class="ac-panel">
                                                                            <div class="px-4 pb-4 sm:px-5">
                                                                                <div class="is-scrollbar-hidden min-w-full overflow-x-auto">
                                                                                    <table class="is-hoverable w-full text-left">
                                                                                        <thead>
                                                                                            <tr class="border-y border-transparent border-b-slate-200 dark:border-b-navy-500">
                                                                                                <th class="whitespace-nowrap px-3 py-3 font-semibold uppercase text-slate-800 dark:text-navy-100 lg:px-5">
                                                                                                    #
                                                                                                </th>
                                                                                                <th class="whitespace-nowrap px-3 py-3 font-semibold uppercase text-slate-800 dark:text-navy-100 lg:px-5">
                                                                                                    Name
                                                                                                </th>
                                                                                                <th class="whitespace-nowrap px-3 py-3 font-semibold uppercase text-slate-800 dark:text-navy-100 lg:px-5">
                                                                                                    Job
                                                                                                </th>
                                                                                                <th class="whitespace-nowrap px-3 py-3 font-semibold uppercase text-slate-800 dark:text-navy-100 lg:px-5">
                                                                                                    Favorite Color
                                                                                                </th>
                                                                                            </tr>
                                                                                        </thead>
                                                                                        <tbody>
                                                                                            @if (Model.IndicatorsByObjective.TryGetValue(objective.Id, out var indicators))
                                                                                            {
                                                                                                foreach (var indicator in indicators)
                                                                                                {
                                                                                                    <tr class="border-y border-transparent border-b-slate-200 dark:border-b-navy-500">
                                                                                                        <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                                                            @indicator.Id
                                                                                                        </td>
                                                                                                        <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                                                            @indicator.Name
                                                                                                        </td>
                                                                                                        <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                                                            Quality Control Specialist
                                                                                                        </td>
                                                                                                        <td class="whitespace-nowrap px-4 py-3 sm:px-5">
                                                                                                            Blue
                                                                                                        </td>
                                                                                                    </tr>
                                                                                                }
                                                                                            }
                                                                                        </tbody>
                                                                                    </table>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        }
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/Scripts/dist/perspectives.bundle.js")
}
